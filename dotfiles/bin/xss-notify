# Author: Jan Larres <jan@majutsushi.net>
# License: MIT/X11

import sys

import logging
logging.basicConfig(format='%(levelname)s: %(message)s', level=logging.INFO)
log = logging.getLogger(__name__)

import gi
gi.require_version('Gdk', '3.0')
gi.require_version('Gtk', '3.0')
from gi.repository import Gdk
from gi.repository import Gtk


def main() -> int:
    display = Gdk.Display.get_default()
    seat = display.get_default_seat()
    pointer = seat.get_pointer()
    pos = pointer.get_position()
    monitor = display.get_monitor_at_point(pos.x, pos.y)
    workarea = monitor.get_workarea()

    win_height = workarea.height * 2 / 3
    win_width = workarea.width * 2 / 3

    geom = Gdk.Geometry()
    geom.min_height = win_height
    geom.max_height = win_height
    geom.min_width = win_width
    geom.max_width = win_width

    win = Gtk.Window()
    win.set_geometry_hints(None, geom, Gdk.WindowHints.MAX_SIZE | Gdk.WindowHints.MIN_SIZE)
    win.set_position(Gtk.WindowPosition.CENTER)

    label = Gtk.Label("About to lock screen")
    win.add(label)

    win.connect("destroy", Gtk.main_quit)
    win.show_all()

    Gtk.main()

    return 0


if __name__ == "__main__":
    sys.exit(main())
