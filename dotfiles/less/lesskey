#command
h left-scroll
l right-scroll
^L noaction ^R\eu
[ prev-file
] next-file
Q quit \1
:cq quit \1
D noaction j/\^((diff|commit|Date|From) )|((added|deleted|modified): )\n\eu
# ^s noaction /\^\\s+
^s noaction /\^       
V noaction g|$/usr/bin/vim -\n

#line-edit
^A home
^E end
^F right
^B left
^D delete
^W word-backspace
^P up
^N down

^[ abort

#env
# See 'man 5 termcap' for capabilities
# start bold mode => bold red
LESS_TERMCAP_md = ^[[1;31m
# start underlining => bold green
LESS_TERMCAP_us = ^[[1;32m
# end underlining => turn off all attributes
LESS_TERMCAP_ue = ^[[m^O
# Height of prompt to use when calculating screen height for -F
LESS_SHELL_LINES=3
# https://github.com/ryanoasis/nerd-fonts/wiki/FAQ-and-Troubleshooting#less-settings
LESSUTFCHARDEF=e000-f8ff:p,f0001-fffff:p
